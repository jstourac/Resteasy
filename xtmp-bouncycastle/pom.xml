<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <!-- Install the bouncycastle jar into the users local repo.
      rls this whole directory should be removed when these jars
      become available in a public repo.  Update the jar version in
      the BOM.  Remove reference to this dir from ../pom.xml
   -->


   <groupId>org.jboss.resteasy</groupId>
   <artifactId>xtmp-bouncycastle</artifactId>
   <version>4.7.0-SNAPSHOT</version>
   <packaging>pom</packaging>

   <properties>
      <version.bouncycastle>169b08</version.bouncycastle>
   </properties>
   <build>
     <plugins>
        <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-install-plugin</artifactId>
           <executions>
              <execution>
                 <id>bcjmail-install</id>
                 <phase>validate</phase>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <configuration>
                    <file>${basedir}/bcjmail-jdk15on-169b08.jar</file>
                    <groupId>org.bouncycastle</groupId>
                    <artifactId>bcjmail-jdk15on</artifactId>
                    <version>${version.bouncycastle}</version>
                    <packaging>jar</packaging>
                 </configuration>
              </execution>
              <execution>
                 <id>bcpkix-install</id>
                 <phase>validate</phase>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <configuration>
                    <file>${basedir}/bcpkix-jdk15on-169b08.jar</file>
                    <groupId>org.bouncycastle</groupId>
                    <artifactId>bcpkix-jdk15on</artifactId>
                    <version>${version.bouncycastle}</version>
                    <packaging>jar</packaging>
                 </configuration>
              </execution>
              <execution>
                 <id>bcutil-install</id>
                 <phase>validate</phase>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <configuration>
                    <file>${basedir}/bcutil-jdk15on-169b08.jar</file>
                    <groupId>org.bouncycastle</groupId>
                    <artifactId>bcutil-jdk15on</artifactId>
                    <version>${version.bouncycastle}</version>
                    <packaging>jar</packaging>
                 </configuration>
              </execution>
              <execution>
                 <id>bcprov-install</id>
                 <phase>validate</phase>
                 <goals>
                    <goal>install-file</goal>
                 </goals>
                 <configuration>
                    <file>${basedir}/bcprov-jdk15on-169b08.jar </file>
                    <groupId>org.bouncycastle</groupId>
                    <artifactId>bcprov-jdk15on</artifactId>
                    <version>${version.bouncycastle}</version>
                    <packaging>jar</packaging>
                 </configuration>
              </execution>
           </executions>
        </plugin>
     </plugins>
   </build>
</project>